%h1 Listing credit_cards

%table
  %thead
    %tr
      %th Number
      %th Cvv
      %th Expiration month
      %th Expiration year
      %th Firstname
      %th Lastname
      %th
      %th
      %th

  %tbody
    - @credit_cards.each do |credit_card|
      %tr
        %td= credit_card.number
        %td= credit_card.CVV
        %td= credit_card.expiration_month
        %td= credit_card.expiration_year
        %td= credit_card.firstname
        %td= credit_card.lastname
        %td= link_to 'Show', credit_card
        %td= link_to 'Edit', edit_credit_card_path(credit_card)
        %td= link_to 'Destroy', credit_card, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

