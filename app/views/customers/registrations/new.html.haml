.container-fluid 
  .row 
    .col-md-4.col-md-offset-4
      %h1.text-center Sign up 
      %p.text-center 
        = link_to customer_omniauth_authorize_path(:facebook), class: "f_icon" do
          =image_tag('f_icon.png')      
      %h4.text-center or
      %br

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        .form-group
          = f.text_field :firstname, autofocus: true, class: "form-control", placeholder: "First name"

        .form-group
          = f.text_field :lastname, class: "form-control", placeholder: "Last name"

        .form-group
          = f.email_field :email, class: "form-control", placeholder: "Email"

        .form-group
          = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password (#{@minimum_password_length} characters minimum)"

        .form-group
          = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation"

        .form-group
          = f.submit "Sign up", class: "btn btn-primary"

      = render "customers/shared/links" 
